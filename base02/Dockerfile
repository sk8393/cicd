FROM sk8393/base01:2.0

# Environmental variables related to database.
# ENV DB_ENGINE mysql
ENV DB_ENGINE postgres
ENV POSTGRES_DB_NAME awssql
ENV POSTGRES_DB_PORT 5432
ENV POSTGRES_SUPERUSER root
ENV POSTGRES_SUPERUSER_PASSWORD acd483de
ENV POSTGRES_SUPERUSER_SCHEMA root
ENV POSTGRES_COMMON_USER other
ENV POSTGRES_COMMON_USER_PASSWORD 3adfed07
ENV POSTGRES_COMMON_SCHEMA common

ENV DB_NAME ${POSTGRES_DB_NAME}
ENV DB_ROOT_USER ${POSTGRES_SUPERUSER}
ENV DB_ROOT_PASSWORD ${POSTGRES_SUPERUSER_PASSWORD}
ENV DB_ROOT_SCHEMA ${POSTGRES_SUPERUSER_SCHEMA}
ENV DB_COMMON_USER ${POSTGRES_COMMON_USER}
ENV DB_COMMON_USER_PASSWORD ${POSTGRES_COMMON_USER_PASSWORD}
ENV DB_COMMON_SCHEMA ${POSTGRES_COMMON_SCHEMA}

# And run init.sh.
CMD ["/usr/local/bin/init.sh"]
